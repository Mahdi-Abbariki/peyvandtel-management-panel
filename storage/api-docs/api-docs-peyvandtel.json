{
    "openapi": "3.0.0",
    "info": {
        "title": "Peyvandtel Management Panel",
        "description": "Peyvandtel Management Panel Api Documentation",
        "contact": {
            "name": "Peyvandtel",
            "url": "https://peyvandtel.com",
            "email": "info@peyvandtel.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/peyvandtel/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Peyvandtel admin login",
                "description": "authenticate admin and returns token",
                "operationId": "PeyvandtelAdminLogin",
                "parameters": [
                    {
                        "name": "username",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "model",
                        "in": "query",
                        "description": "model of the device",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "$ref": "#/components/schemas/PeyvandtelAdmin"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No Peyvandtel Admin available",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ValidationErrorResponse": {
                "properties": {
                    "message": {
                        "description": "the first error message and it also contains the count of other errors occurred",
                        "type": "string",
                        "example": "The propertyName is required. (and 1 more error)"
                    },
                    "errors": {
                        "properties": {
                            "propertyName": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "The propertyName is required."
                                },
                                "collectionFormat": "multi"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "UnauthorizedErrorResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Unauthenticated."
                    }
                },
                "type": "object"
            },
            "PeyvandtelAdmin": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "مدیریت نرم‌افزار"
                    },
                    "username": {
                        "type": "string",
                        "example": "admin"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}